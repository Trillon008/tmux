TMUX_DARK="\#2C2F32"
TMUX_LIGHT=white
TMUX_ACCENT=blue

## Status bar 
set -g status-bg $TMUX_DARK
set -g status-fg $TMUX_LIGHT

## Color active windows
setw -g window-status-current-bg blue

## Pane borders color 
set-option -g pane-active-border-fg $TMUX_ACCENT
set-option -g pane-border-fg $TMUX_LIGHT
 
## Color when sitching panes
set-option -g display-panes-colour $TMUX_LIGHT
set-option -g display-panes-active-colour $TMUX_ACCENT

## Color in copy mode
set-option -g mode-bg $TMUX_ACCENT
set-option -g mode-fg $TMUX_LIGHT

## Message color in status bar
set -g message-bg $TMUX_ACCENT
set -g message-fg $TMUX_LIGHT


